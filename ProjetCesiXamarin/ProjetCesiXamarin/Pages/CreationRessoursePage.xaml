<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetCesiXamarin.Pages.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Picker Title="Categorie"
                Grid.Row="3"
                Grid.ColumnSpan="4"
                SelectedItem="{Binding CreationData}"
                FontSize="20"
                ItemsSource="{Binding Categories}"
                ItemDisplayBinding="{Binding Nom}">
            </Picker>
            <Picker Title="TypeRessources"
                Grid.Row="3"
                Grid.ColumnSpan="4"
                SelectedItem="{Binding CreationData}"
                FontSize="20"
                ItemsSource="{Binding TypeRessources}"
                ItemDisplayBinding="{Binding Nom}">
            </Picker>
            <Picker Title="TypeRelations"
                Grid.Row="3"
                Grid.ColumnSpan="4"
                SelectedItem="{Binding CreationData}"
                FontSize="20"
                ItemsSource="{Binding TypeRelations}"
                ItemDisplayBinding="{Binding Nom}">
            </Picker>
            <Editor Placeholder="Ecrivez votre article" PlaceholderColor="Gray" />
            <Button Text="Valider votre article" HorizontalOptions="Center" Clicked="ValidRessource"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>