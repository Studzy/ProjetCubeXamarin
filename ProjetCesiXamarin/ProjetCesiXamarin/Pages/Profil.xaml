<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetCesiXamarin.Pages.Profil">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--<Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            <Image Source="userimage.png" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Aspect="AspectFill" HeightRequest="150" WidthRequest="150" />
            
            <StackLayout HorizontalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Label HorizontalOptions="Start" FontAttributes="Bold" FontSize="20" Text="Nom d'utilisateur : "/>
                    <Label HorizontalOptions="Start" FontSize="20" Text="{Binding User.UserName}" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Label HorizontalOptions="Start" FontAttributes="Bold" FontSize="20" Text="Email : "/>
                    <Label HorizontalOptions="Start" FontSize="20" Text="{Binding User.Email}" />
                </StackLayout>
            </StackLayout>
                

        </StackLayout>
    </ContentPage.Content>
</ContentPage>